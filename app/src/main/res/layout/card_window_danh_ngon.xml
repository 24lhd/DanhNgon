<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/view_wd_dn"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/im_wd_bn_dn"
                android:src="@color/colorBlue_200"
                android:layout_height="240dp" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_alignBottom="@id/im_wd_bn_dn"
                android:background="@color/bg_danhngon"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_view"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_wd_content"
                        android:textStyle="bold"
                        android:shadowColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:text="a"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/tv_wd_author"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:text="a"
                        android:shadowColor="@color/colorBlack"
                        android:shadowDx="2"
                        android:shadowRadius="2"
                        android:shadowDy="2"
                        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </ScrollView>
            <ImageView
                android:layout_width="128dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_fb"
                android:layout_alignParentRight="true"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:text="Yêu thích"
                android:id="@+id/bt_wd_yeu_thich"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_item"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:text="Chia sẻ ảnh"
                android:id="@+id/bt_wd_chia_se_anh"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/margin_item"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:text="Ẩn"
                android:textColor="@color/colorPrimary"
                android:id="@+id/bt_wd_an"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_item"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>