<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/view_dn"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:src="@color/colorBlue"
        android:scaleType="centerCrop"
        android:id="@+id/im_bn_dn"
        android:layout_height="240dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/im_bn_dn"
        android:background="@color/bg_danhngon"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_view"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_content"
                android:textStyle="bold"
                android:shadowColor="@color/colorBlack"
                android:shadowDx="3"
                android:layout_gravity="center"
                android:shadowRadius="3"
                android:layout_height="wrap_content"
                android:shadowDy="3"
                android:textColor="@color/colorWhite"
                style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_author"
                android:gravity="right"
                android:textStyle="bold"
                android:shadowColor="@color/colorBlack"
                android:shadowDx="3"
                android:shadowRadius="3"
                style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>