<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin ="@dimen/margin_card">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/select"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Tên Lớp"
                    android:layout_marginTop="@dimen/margin_item"
                    android:layout_marginLeft="@dimen/margin_item"
                    android:background="@drawable/select"
                    android:singleLine="false"
                    android:textColor="@color/colorBlack"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tv_content"
                    android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_stt"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_view"
                    style="@style/TextAppearance.AppCompat.Notification.Line2"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="~ Mã lop ~"
                    android:singleLine="false"
                    android:layout_marginTop="@dimen/margin_item"
                    android:gravity="right|center"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/margin_item"
                    android:layout_marginRight="@dimen/margin_view"
                    android:id="@+id/tv_author"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
</android.support.v7.widget.CardView>